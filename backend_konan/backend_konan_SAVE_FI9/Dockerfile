# ==========================================
# KONAN BACKEND ‚Äî FastAPI + Alembic + Uvicorn (version finale valid√©e)
# ==========================================
FROM python:3.11-slim

# R√©pertoire de travail
WORKDIR /app

# Variables d'environnement globales
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PYTHONPATH=/app \
    CHROMA_DB_DIR=./chroma_store \
    CHROMA_DB_DIR_LAWS=./chroma_store_laws \
    CHROMA_TELEMETRY_DISABLED=true \
    PATH="/usr/local/bin:$PATH"

# D√©pendances syst√®me (PostgreSQL + build + Rust pour ChromaDB)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    postgresql-client \
    curl \
    rustc \
    cargo \
    && rm -rf /var/lib/apt/lists/*

# Copie et installation des d√©pendances Python
COPY requirements.txt .
RUN pip install --no-cache-dir -U pip setuptools wheel --root-user-action=ignore \
    && pip install --no-cache-dir -r requirements.txt --root-user-action=ignore
RUN pip install --no-cache-dir reportlab
# Copie du code source complet
COPY . .

# Cr√©ation des r√©pertoires persistants
RUN mkdir -p /app/chroma_store /app/chroma_store_laws

# Port expos√©
EXPOSE 8000

# Commande de d√©marrage
CMD ["bash", "-c", "\
    echo 'üîß Initialisation du backend Konan'; \
    alembic upgrade head || echo '‚ö†Ô∏è Aucune migration √† appliquer'; \
    echo 'üöÄ Lancement du serveur FastAPI'; \
    uvicorn app.main:app --host 0.0.0.0 --port 8000 \
"]
